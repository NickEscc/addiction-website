doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Poker Addiction - Home
  body
    | {% load static %}
    link(rel='stylesheet', href="{% static 'website/css/style.css' %}")
    style.
      /* Body Styling */
      body {
      background-color: rgb(18, 18, 18);
      color: rgb(35, 35, 35);
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      text-align: center;
      }
      /* Title in the top-left corner */
      .top-left-title {
      position: absolute;
      top: 10px;
      left: 10px;
      font-size: 24px;
      font-weight: bold;
      color: #FFFFFF;
      background-color: #333333;
      padding: 5px 10px;
      border-radius: 5px;
      }
      /* Text below the title */
      .top-left-subtitle {
      position: absolute;
      top: 40px;
      left: 10px;
      font-size: 14px;
      color: #FFFFFF;
      background-color: #333333;
      padding: 5px 10px;
      border-radius: 5px;
      }
      /* Modal (Pop-Up) Styling */
      #ageModal {
      display: none; /* Hidden by default */
      position: fixed;
      z-index: 1; /* Sit on top */
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.4); /* Black with opacity */
      text-align: center;
      padding-top: 200px;
      }
      /* Modal Content */
      .modal-content {
      background-color: white;
      padding: 20px;
      border-radius: 5px;
      width: 300px;
      margin: 0 auto;
      }
      .modal-content h2 {
      margin-bottom: 20px;
      }
      .modal-content p {
      margin-bottom: 20px;
      font-size: 16px;
      }
      .modal-button {
      background-color: #FFAA00;
      color: white;
      padding: 10px 20px;
      border-radius: 5px;
      font-weight: bold;
      cursor: pointer;
      font-size: 18px;
      }
      .modal-button:hover {
      background-color: #FF7F00;
      }
      /* Navigation Bar Styling */
      nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background-color: #333;
      padding: 10px 20px;
      width: 100%;
      margin-top: 80px;
      }
      .nav-btn {
      background-color: #FFAA00;
      color: white;
      padding: 10px 20px;
      border-radius: 5px;
      text-decoration: none;
      font-weight: bold;
      font-size: 18px;
      margin: 0 10px;
      }
      .nav-btn:hover {
      background-color: #FF7F00;
      }
    // "Poker Addiction" title in the top-left corner
    .top-left-title Poker Obsession
    // Text under the title
    .top-left-subtitle The Ultimate Poker Experience
    // Age Verification Modal
    #ageModal
      .modal-content
        h2 Age Verification
        p You must be 21 or older to continue.
        button.modal-button(onclick='confirmAge()') I am 21 or Older
    // Navigation Links
    nav
      div
      .nav-center
        a.nav-btn(href='HowItWorks') How It Works
        a.nav-btn(href='HowToPlay') How to Play
        a.nav-btn(href='play-now.html') Play Now
      div

    script.
      // JavaScript to handle the age verification pop-up
      function showModal() {
      document.getElementById("ageModal").style.display = "block";
      }
      function confirmAge() {
      // When the user clicks the confirm button, hide the modal
      document.getElementById("ageModal").style.display = "none";
      }
      // Show the modal when the page loads
      window.onload = showModal;